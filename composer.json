{
    "name": "dannyvandersluijs/json-mapper",
    "description": "Map JSON structures to PHP classes",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "myclabs/php-enum": "^1.7"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.14",
        "phpunit/phpunit": "^8.0",
        "php-coveralls/php-coveralls": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "DannyVanDerSluijs\\JsonMapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DannyVanDerSluijs\\Tests\\JsonMapper\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": ["./vendor/bin/phpcs --standard=PSR12 src tests"],
        "phpcbf": ["./vendor/bin/phpcbf --standard=PSR12 src tests"],
        "phpstan": "./vendor/bin/phpstan analyse",
        "phpunit": "./vendor/bin/phpunit"
    }
}
